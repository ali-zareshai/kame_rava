<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gracy"
    tools:context=".AndroidAccelerometerExample" >

    <com.example.ali.shiva.CustomTextView2
        android:id="@+id/textView40"
        android:textSize="18sp"
        android:textColor="#FF0000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"

        android:layout_marginTop="30dp"
        android:text="" />

    <ProgressBar
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/progressBar23"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/textView40"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/shaking"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/imageView2" />

    <android.support.design.widget.FloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:layout_centerHorizontal="true"
        app:fabSize="normal"
        android:foregroundGravity="center"
        app:srcCompat="@drawable/mute_volume"
        android:layout_below="@+id/imageView2"
        android:layout_marginTop="30dp"
        android:id="@+id/floatingActionButtonmuteaccler" />


</RelativeLayout>