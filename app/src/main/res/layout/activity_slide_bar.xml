<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:layoutDirection="ltr"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:background="@drawable/background"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.ali.shiva.SlideBar">
    <TextView
        android:id="@+id/simpleDigitalClock"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="70dp"
        android:textStyle="bold"
        android:text="12:33"
        android:background="@drawable/circle"
        android:shadowColor="@color/text_shadow"
        android:shadowDx="2"
        android:shadowDy="2"
        android:shadowRadius="2"
        android:textColor="@color/dark_green"
        android:layout_centerHorizontal="true"
        android:padding="30dp"/>
    <SeekBar
        android:id="@+id/myseek"
        android:layout_alignParentBottom="true"
        android:background="@color/light_green"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:clickable="false"
        android:layout_marginBottom="20dp"
        android:max="100"
        android:progressDrawable="@android:color/transparent"
        android:thumb="@drawable/slidetounlock_thumb" />
    <com.example.ali.shiva.CustomButton
        android:layout_width="wrap_content"
        android:text="چرت کوتاه"
        android:textColor="@color/colorPrimary"
        android:id="@+id/imageButtonSlide"
        android:background="@color/toolbar_color2"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="230dp"

        android:layout_height="wrap_content" />
    <android.support.v7.widget.CardView
        android:layout_width="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        app:cardCornerRadius="4dp"
        app:cardElevation="4dp"
        android:elevation="10dp"
        app:cardMaxElevation="4dp"
        android:padding="5dp"
        app:cardBackgroundColor="@color/wihtopictiy"
        android:layout_marginBottom="90dp"
        android:layout_height="120dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:text="ghghghghghghgh"
                android:textSize="17dp"
                android:textStyle="bold"
                android:padding="10dp"
                android:shadowColor="@color/text_shadow2"
                android:shadowDx="3"
                android:layout_margin="2dp"
                android:shadowDy="2"
                android:shadowRadius="3"
                android:textAlignment="textStart"
                android:textDirection="rtl"
                android:textColor="@color/text_slide"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView_skidbar_message" />
            <TextView
                android:text="jhjhjjhjh"
                android:textSize="14dp"
                android:textStyle="bold"
                android:padding="5dp"
                android:shadowColor="@color/text_shadow2"
                android:shadowDx="1"
                android:layout_marginLeft="10dp"
                android:layout_margin="1dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentBottom="true"
                android:layout_alignBottom="@+id/textView_skidbar_message"
                android:shadowDy="1"
                android:shadowRadius="1"
                android:textColor="@color/text_slide"
                android:textDirection="rtl"
                android:textAlignment="textEnd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView_slidebar_from" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>

</RelativeLayout>
