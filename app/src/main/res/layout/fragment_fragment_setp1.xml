<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.ali.shiva.FragmentSetp1">

    <!-- TODO: Update blank fragment layout -->
    <ScrollView
        android:layout_width="match_parent"
        android:background="@drawable/gradiant_msg"
        android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"

        android:layout_height="match_parent">
        <com.example.ali.shiva.CustomTextView
            android:layout_width="match_parent"
            android:text="سلام"
            android:id="@+id/ttr1"
            android:textSize="40dp"
            android:textStyle="bold"
            android:gravity="center"
            android:textColor="@color/dark_green"
            android:layout_height="wrap_content" />
        <com.example.ali.shiva.CustomTextView
            android:layout_width="wrap_content"
            android:layout_below="@id/ttr1"
            android:text="خوش آمدید!!!"
            android:textSize="32dp"
            android:gravity="center"
            android:layout_marginTop="5dp"
            android:padding="10dp"
            android:id="@+id/ttr2"
            android:textColor="@color/dark_green"
            android:textStyle="bold"
            android:layout_centerHorizontal="true"
            android:layout_height="wrap_content" />

        <com.example.ali.shiva.CustomTextView2
            android:layout_width="match_parent"
            android:layout_below="@id/ttr2"
            android:layout_marginTop="5dp"
            android:padding="10dp"
            android:id="@+id/ttr3"
            android:textColor="@color/black"
            android:textStyle="italic"
            android:text="@string/welcome"
            android:textSize="12dp"
            android:layout_height="wrap_content" />


    </RelativeLayout>
    </ScrollView>


</FrameLayout>
