<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layoutDirection="rtl"
    android:background="@color/iron2"

    android:layout_height="wrap_content">
    <com.example.ali.shiva.CustomTextView2
        android:layout_width="wrap_content"
        android:text="لطفا استان محل زندگی خود را انتخاب کنید:"
        android:layout_centerHorizontal="true"
        android:id="@+id/text11"
        android:layout_marginTop="10dp"
        android:textColor="@color/abi"
        android:layout_height="wrap_content" />
    <Spinner
        android:layout_width="160dp"
        android:layout_below="@id/text11"
        android:layout_marginTop="10dp"
        android:id="@+id/spinnerdialog"
        android:background="@color/white"
        android:layout_centerHorizontal="true"
        android:layout_height="wrap_content"/>

    <com.example.ali.shiva.CustomButton
        android:layout_width="wrap_content"
        android:id="@+id/okdialog1"
        android:layout_marginLeft="100dp"
        android:layout_below="@+id/spinnerdialog"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="خب"
        android:layout_marginBottom="10dp"
        android:background="@color/light_green"
        android:textColor="@color/black"
        android:layout_height="wrap_content" />




</RelativeLayout>