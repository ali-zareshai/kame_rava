<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.ali.shiva.CaptchaActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="1"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <ImageView
            android:layout_width="600dp"
            android:layout_height="150dp"
            app:srcCompat="@android:drawable/status_bar_item_app_background"
            android:id="@+id/imageView"
            android:layout_alignParentTop="true"
            android:layout_gravity="center"
            android:layout_alignParentStart="true"
            android:layout_marginStart="156dp" />

        <ProgressBar
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/progressBar" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:focusable="true"
            android:text=""
            android:layout_marginTop="15dp"
            android:ems="10"
            android:hint="لطفا متن را وارد کنید"
            android:id="@+id/editTextcap" />

        <com.example.ali.shiva.CustomButton
            android:text="تایید"
            android:background="@color/text_slide"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:id="@+id/button_verify" />

        <com.example.ali.shiva.CustomButton
            android:text="تازه سازی"
            android:background="@color/primary"
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:layout_height="wrap_content"
            android:id="@+id/imageButtonrefresh" />

        <android.support.design.widget.FloatingActionButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:clickable="true"
            app:fabSize="normal"
            app:srcCompat="@drawable/mute_volume"
            android:id="@+id/floatingActionButtonmutecaptal" />

    </LinearLayout>

</RelativeLayout>
